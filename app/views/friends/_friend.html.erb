<% if friend.user == current_user %>
<tr id="<%= dom_id friend %>">
  <td><%= friend.first_name %></td>
  <td><%= friend.last_name %></td>
  <td><%= friend.email %></td>
  <td><%= friend.phone %></td>
  <td><%= friend.twitter %></td>
  <td><%= friend.user_id %></td>
  <td><%= link_to "Show", friend, class: "btn btn-sm btn-primary" %></td>
  <td><%= link_to "Edit", edit_friend_path(friend), class: "btn btn-sm btn-secondary" %></td>
  <td><%= button_to "Delete", friend, method: :delete, class: "btn btn-sm btn-danger", onclick: "return confirm('Are you sure you want to delete this friend?')" %></td>
  </tr>
<% end %>